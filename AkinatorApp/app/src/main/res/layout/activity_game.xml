<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/refresh"
            android:id="@+id/update"
            android:onClick="onClickUp"
            android:layout_margin="10dp"

            />
        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:text="Ваше число"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:text="20"
            android:textSize="40dp"
            android:textStyle="bold"
            android:id="@+id/number"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="230dp"
            android:src="@drawable/akinator"
            android:id="@+id/akinator"

            />


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Больше"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="#fffc50"
                android:id="@+id/more"
                android:onClick="onClickBig"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Меньше"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:background="#fffc50"
                android:id="@+id/less"
                android:onClick="onClickSmall"
                />


        </TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Да!"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#6ff53e"
            android:layout_margin="2dp"
            android:id="@+id/equal"
            android:onClick="onClickYes"


            />
    </LinearLayout>





</RelativeLayout>